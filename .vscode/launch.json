  "version": "0.2.0",
  "configurations": [
    {
      "name": "openOCD",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/blinky.elf",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "targetArchitecture": "arm",
      "launchCompleteCommand": "None",
      "hardwareBreakpoints": { "require": true },
      "miDebuggerPath": "arm-none-eabi-gdb",
      "setupCommands": [
        {
          "text": "file ${workspaceFolder}/blinky.elf",
          "ignoreFailures": false
        },
        {
          "text": "target extended-remote | openocd -f board/microchip_same51_curiosity_nano.cfg -c 'gdb_port pipe'",
          "ignoreFailures": false
        },
        {
          "text": "monitor target_request debugmsgs enable",
          "ignoreFailures": false
        },
        { "text": "monitor trace point 1", "ignoreFailures": false },
        { "text": "monitor reset halt", "ignoreFailures": false }
      ],
      "preLaunchTask": "build_debug"
    }
  ]
}
